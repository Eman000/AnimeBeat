

@model Anime.Models.users
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Login</title>


    <link rel="stylesheet" href="/Content/LoginStyle/css/reset.css">
    <link rel='stylesheet prefetch' href='http://fonts.googleapis.com/css?family=Roboto:400,100,300,500,700,900|RobotoDraft:400,100,300,500,700,900'>
    <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css'>
    <link rel="stylesheet" href="/Content/LoginStyle/css/style.css">
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>



</head>
<body>

    <!-- Form Mixin-->
    <!-- Input Mixin-->
    <!-- Button Mixin-->
    <!-- Pen Title-->
    <div class="pen-title">
        <h1>Reset Password</h1>

    </div>
    <!-- Form Module-->
    <div class="module form-module">
        <div class="toggle">
            <i class="fa fa-times fa-pencil"></i>

        </div>
        <div class="form">
            <center><h2>Reset your Password!</h2></center>

                     @using (Html.BeginForm("EditPassword", "Users", FormMethod.Post))
                      {
                            @Html.HiddenFor(model => model.Id)
                            @Html.HiddenFor(model => model.firstname)
                            @Html.HiddenFor(model => model.lastname)
                            @Html.HiddenFor(model => model.username)
                            @Html.HiddenFor(model => model.email)
                            @Html.HiddenFor(model => model.secretquestion)
                            @Html.HiddenFor(model => model.secretanswer)
                            @Html.HiddenFor(model => model.profile)

                            @Html.TextBoxFor(model => model.password, new { @placeholder = " Enter New Password" })
                            @Html.ValidationMessageFor(model => model.password)
                         
                            <button type="submit" class="btn btn-default" id="log">Submit</button>
                    }

        </div>

   </div>
        <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
        <script src='http://codepen.io/andytran/pen/vLmRVp.js'></script>
        <script src="/Content/LoginStyle/js/index.js"></script>



</body>
</html>

